<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta http-equiv="X-UA-Compatible" content="IE=edge" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>Document</title>
    <!-- CSS only -->
    <link
      href="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/css/bootstrap.min.css"
      rel="stylesheet"
      integrity="sha384-1BmE4kWBq78iYhFldvKuhfTAU6auU8tT94WrHftjDbrCEXSU1oBoqyl2QvZ6jIW3"
      crossorigin="anonymous"
    />
  </head>
  <body>
    <div class="container" style="margin-top: 50px">
      <div style="display: flex; justify-content: space-between;">
        <h1>Lista de Usuarios</h1>
        <a href="usuarios/crear" style="display: flex; align-items:center" class="btn btn-success">Nuevo</a>
      </div>
      <table class="table">
        <thead>
          <tr>
            <th scope="col">ID</th>
            <th scope="col">First</th>
            <th scope="col">Last</th>
            <th scope="col">Age</th>
            <th style="text-align: center" scope="col">Acciones</th>
          </tr>
        </thead>
        <tbody>
          <% for(const user of users){ %>
          <tr>
            <th scope="row"><%= user.id %></th>
            <td><%= user.firstname %></td>
            <td><%= user.lastname %></td>
            <td><%= user.age %></td>
            <td style="display: flex; justify-content: space-around;">
                <a href=<%= `/usuarios/editar/${user.id}` %> class="btn btn-primary">Editar</a>
                <a href=<%= `/usuarios/delete/${user.id}` %>  class="btn btn-danger">Eliminar</a>
            </td>
          </tr>
          <% } %>
        </tbody>
      </table>
    </div>
  </body>

</html>
